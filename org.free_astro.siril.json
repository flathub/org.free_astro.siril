{
    "app-id": "org.free_astro.siril",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "siril",
    "rename-icon": "siril",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        /* Needed for gvfs to work */
        "--talk-name=org.gtk.vfs", "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "cfitsio",
            "make-args": ["shared"],
            "cleanup": [
                "/include",
                "/lib/*.a",
                "/lib/*.la",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-3.48.tar.gz",
                    "sha256": "91b48ffef544eb8ea3908543052331072c99bf09ceb139cb3c6977fc3e47aac1"
                }
            ]
        },
        {
            "name": "gsl",
            "config-opts": [
                "--enable-shared",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://mirror.sergal.org/gnu/gsl/gsl-2.6.tar.gz",
                    "sha256": "b782339fc7a38fe17689cb39966c4d821236c28018b6593ddb6fd59ee40786a8"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/lib/*.a",
                "/lib/*.la",
                "/share/aclocal",
                "/share/info",
                "/share/man"
            ]
        },
        {
            "name": "fftw3",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-float",
                "--enable-threads",
                "--enable-openmp",
                "--disable-fortran"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://fftw.org/fftw-3.3.8.tar.gz",
                    "sha256": "6113262f6e92c5bd474f2875fa1b01054c4ad5040f6b0da7c03c98821d9ae303"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/*.a",
                "/lib/*.la",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/share/info",
                "/share/man"
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "-D CMAKE_BUILD_TYPE=RELEASE",
                "-D BUILD_EXAMPLES=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/3.4.3.zip",
                    "sha256": "37c7d8c3b9807902ad11b9181bbde61dcb3898a78a563130494752f46fe8cc5f"
                }
            ]
        },
        {
            "name": "libraw",
            "config-opts": [ "--disable-examples", "--disable-static" ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib/*.la",
                "/share/doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url" : "https://www.libraw.org/data/LibRaw-0.20.0.tar.gz",
                    "sha256" : "1f0a383da2ce9f409087facd28261decbf6be72cc90c78cd003b0766e4d694a3"
                }
            ]
        },
        {
            "name": "libconfig",
            "config-opts": [
                "--disable-static",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://hyperrealm.github.io/libconfig/dist/libconfig-1.7.2.tar.gz",
                    "sha256": "7c3c7a9c73ff3302084386e96f903eb62ce06953bb1666235fac74363a16fad9"
                }
            ],
            "cleanup": [
                "/include",
                "*.la",
                "*.a",
                "/lib/cmake",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "ffms2",
            "config-opts": [
                "--with-pic",
                "--disable-static",
                "--enable-shared"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FFMS/ffms2/archive/2.23.tar.gz",
                    "sha256": "b09b2aa2b1c6f87f94a0a0dd8284b3c791cbe77f0f3df57af99ddebcd15273ed"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "siril",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/free-astro/siril.git",
                    "tag": "0.9.12",
                    "commit": "f43cfb950a1f36d5587fa92fe165486d9e26345b"
                },
                {
                    "type": "patch",
                    "path": "siril-appdata.patch"
                }
            ]
        }
    ]
}
